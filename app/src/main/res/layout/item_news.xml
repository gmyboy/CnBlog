<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:padding="10dip">

            <TextView
                android:id="@+id/item_news_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff1c559a"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="8dip">


            <TextView
                android:id="@+id/item_news_sourcename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:textColor="#fffb8924"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/item_news_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/item_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:textColor="#ff49812e"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">


            <ImageButton
                android:id="@+id/item_news_retweet"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/btn_item_action"
                android:src="@mipmap/tweet_retweet" />

            <ImageButton
                android:id="@+id/item_news_reply"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/btn_item_action"
                android:src="@mipmap/tweet_reply" />

            <ImageButton
                android:id="@+id/item_news_favourite"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginLeft="12dip"
                android:background="@drawable/btn_item_action"
                android:src="@mipmap/tweet_favourite" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>